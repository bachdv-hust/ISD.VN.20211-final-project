<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BoldText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/sf_pro_display_bold</item>
    </style>

    <style name="SemiBoldText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
    </style>

    <style name="RegularText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="CancelButton" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:backgroundTint">@android:color/holo_red_light</item>
    </style>

    <style name="SubmitButton" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:backgroundTint">@color/purple_500</item>
    </style>
</resources>